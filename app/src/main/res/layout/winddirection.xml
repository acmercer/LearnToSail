<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background">

    <ImageButton
        android:id="@+id/btnOption2"
        android:layout_width="158dp"
        android:layout_height="158dp"
        android:layout_marginStart="216dp"
        android:contentDescription="@string/picture2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <ImageButton
        android:id="@+id/btnOption4"
        android:layout_width="158dp"
        android:layout_height="158dp"
        android:layout_marginStart="216dp"
        android:layout_marginTop="19dp"
        android:contentDescription="@string/picture4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnOption2"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <ImageButton
        android:id="@+id/btnOption1"
        android:layout_width="158dp"
        android:layout_height="158dp"
        android:layout_marginStart="28dp"
        android:layout_marginEnd="30dp"
        android:contentDescription="@string/picture1"
        app:layout_constraintEnd_toStartOf="@+id/btnOption2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <ImageButton
        android:id="@+id/btnOption3"
        android:layout_width="158dp"
        android:layout_height="158dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="19dp"
        android:contentDescription="@string/picture3"
        app:layout_constraintEnd_toStartOf="@+id/btnOption4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnOption1"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="320dp"
        android:layout_height="125dp"
        android:fontFamily="@font/arvo_bold"
        android:text="@string/winddirection"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView20" />

    <ImageButton
        android:id="@+id/btnBoatBack4"
        android:layout_width="92dp"
        android:layout_height="92dp"
        android:layout_marginEnd="168dp"
        android:layout_marginBottom="44dp"
        android:adjustViewBounds="true"
        android:backgroundTint="#00FFFFFF"
        android:contentDescription="@string/design"
        android:scaleType="fitCenter"
        android:scrollbarThumbHorizontal="@drawable/ic_backbutton"
        app:layout_constraintBottom_toBottomOf="@+id/imageView20"
        app:layout_constraintEnd_toStartOf="@+id/imageView20"
        app:srcCompat="@drawable/ic_baseline_navigate_before_24"
        app:tint="@color/black"
        tools:ignore="DuplicateSpeakableTextCheck" />

    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="206dp"
        android:layout_height="151dp"
        android:layout_marginStart="248dp"
        android:layout_marginBottom="604dp"
        android:contentDescription="@string/logodesc"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_logosmall" />

    <ImageButton
        android:id="@+id/btnBoatHome5"
        style="@android:style/Widget.ImageButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="124dp"
        android:background="#003C2727"
        android:contentDescription="@string/homebtn"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/imageView20"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_home_24"
        app:tint="#000000"
        tools:ignore="RedundantDescriptionCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>